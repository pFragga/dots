# vim: ft=sh

# Determine whether we want POSIX-like behavior
use_strict_posix=n
case $SHELL in
	*/sh|*/dash) use_strict_posix=y ;;
	*) [ -n "$POSIXLY_CORRECT" ] && use_strict_posix=y ;;
esac

if [ "$use_strict_posix" = y ]; then
	alias l.='ls -dF .* 2> /dev/null'
	alias ll.='ls -ldF .* 2> /dev/null'
	alias ll='ls -lF'
	alias ls='ls -F'

	alias watch='watch -C'
else
	alias l.='ls --color=auto -dF .* 2> /dev/null'
	alias ll.='ls --color=auto -ldF .* 2> /dev/null'
	alias ll='ls --color=auto -lF'
	alias ls='ls --color=auto -F'
	alias diff='diff --color=auto'
	alias grep='grep --color=auto'
	alias zgrep='zgrep --color=auto'
	alias bzgrep='bzgrep --color=auto'

	alias ip='ip -c'

	alias watch='watch -c'
fi
unset -v use_strict_posix

alias gs='git status'
alias open='xdg-open'

alias wget="wget --hsts-file=\${XDG_DATA_HOME:~/.local/share}/wget-hsts"

alias mv='mv -i'
alias rm='rm -i'
alias cp='cp -i'

alias sudo=doas
alias stow=xstow
