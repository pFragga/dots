# vim: ft=sh

use_strict_posix=n
case $SHELL in
	*/sh|*/dash) use_strict_posix=y ;;
	*) [ -n "$POSIXLY_CORRECT" ] && use_strict_posix=y ;;
esac

if [ "$use_strict_posix" = y ]; then
	alias l.='ls -dF .* 2> /dev/null'
	alias ll.='ls -ldF .* 2> /dev/null'
	alias ll='ls -lF'
	alias ls='ls -F'
else
	alias l.='ls --color=auto -dF .* 2> /dev/null'
	alias ll.='ls --color=auto -ldF .* 2> /dev/null'
	alias ll='ls --color=auto -lF'
	alias ls='ls --color=auto -F'
	alias diff='diff --color=auto'
	alias grep='grep --color=auto'
	alias zgrep='zgrep --color=auto'
	alias bzgrep='bzgrep --color=auto'
fi
unset -v use_strict_posix

if command -v git > /dev/null; then
	alias gs='git status'
	alias gl='git log'
fi
if command -v xdg-open > /dev/null; then
	alias open='xdg-open'
fi
if command -v wget > /dev/null; then
	alias wget="wget --hsts-file=\${XDG_DATA_HOME:-\$HOME/.local/share}/wget-hsts"
fi
if command -v xdg-ninja > /dev/null; then
	alias xdg-ninja='xdg-ninja | less -R'
fi
if command -v doas > /dev/null; then
	# friendship ended with sudo, now doas is my new friend
	alias sudo=doas
fi

alias mv='mv -i'
alias rm='rm -i'
alias cp='cp -i'
